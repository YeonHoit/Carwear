<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 네이버 지도 MapView -->
    <com.naver.maps.map.MapView
        android:id="@+id/NaverMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 마커 오버레이 Layout -->
    <RelativeLayout
        android:id="@+id/Marker_Info"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/tuning_shop_info"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <!-- 튜닝 샵 사진 ImageView -->
        <ImageView
            android:id="@+id/Tuning_Shop_Image"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_toLeftOf="@+id/Tuning_Shop_Title"
            android:src="@drawable/avante_md"
            android:scaleType="center"/>

        <!-- 튜닝 샵 이름 TextView -->
        <TextView
            android:id="@+id/Tuning_Shop_Title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="28sp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/nanumsquare_acb" />

        <!-- 튜닝 샵 주소 TextView -->
        <TextView
            android:id="@+id/Tuning_Shop_Address"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="AddressAddressAddressAddressAddressAddress"
            android:textSize="20sp"
            android:layout_below="@+id/Tuning_Shop_Title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nanumsquare_acb"/>

        <!-- 튜닝 샵 전화번호 TextView -->
        <TextView
            android:id="@+id/Tuning_Shop_PhoneNumber"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="010-1234-5678"
            android:textSize="20sp"
            android:layout_below="@+id/Tuning_Shop_Address"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/nanumsquare_acb"
            android:layout_marginBottom="20dp"/>

        <!-- 예약하기 버튼 TextView -->
        <TextView
            android:id="@+id/Tuning_Shop_Reserve"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tuning_shop_button_fill"
            android:text="예약하기"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:gravity="center"
            android:fontFamily="@font/nanumsquare_acb"
            android:layout_below="@+id/Tuning_Shop_PhoneNumber"
            android:layout_toLeftOf="@+id/Tuning_Shop_Inquire"
            android:layout_marginRight="20dp" />

        <!-- 문의하기 버튼 TextView -->
        <TextView
            android:id="@+id/Tuning_Shop_Inquire"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tuning_shop_button_empty"
            android:text="문의하기"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/nanumsquare_acb"
            android:layout_below="@id/Tuning_Shop_PhoneNumber"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

</FrameLayout>